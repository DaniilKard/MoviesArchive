@model MovieDeleteVM

@section Title { Delete movie }
@section Styles { <link rel="stylesheet" href="~/css/forms.css" /> }

<h2>Delete Movie</h2>
<form asp-action="DeleteMovie" asp-controller="Movie" method="post">
    <p>
        <div>Movie "@Model.Title" will be deleted</div>
    </p>
    <p class="container-btns">
        <button class="button" type="submit">Ok</button>
        <a class="button" asp-controller="Movie" asp-action="Index">Cancel</a>
    </p>
</form>